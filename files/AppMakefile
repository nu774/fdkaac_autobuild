PREFIX=/mingw

SOURCES=\
    src/aacenc.c     \
    src/caf_reader.c \
    src/extrapolater.c \
    src/limiter.c    \
    src/lpc.c        \
    src/m4af.c       \
    src/main.c       \
    src/metadata.c   \
    src/parson.c     \
    src/pcm_float_converter.c  \
    src/pcm_native_converter.c \
    src/pcm_readhelper.c \
    src/pcm_sint16_converter.c     \
    src/progress.c   \
    src/wav_reader.c \
    src/compat_win32.c

OBJS=$(SOURCES:.c=.o)

CPPFLAGS=-DHAVE_CONFIG_H -I.
CFLAGS=-O2

all: fdkaac.exe

fdkaac.exe: $(OBJS)
	$(CC) -o$@ $(OBJS) -static -lfdk-aac

install: fdkaac.exe
	cp fdkaac.exe $(PREFIX)/bin
